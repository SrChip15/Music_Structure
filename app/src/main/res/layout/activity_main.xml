<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenColor"
    tools:context="com.example.android.musicstructureapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/larger_image_height"
            android:layout_marginBottom="@dimen/eight_dips_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/music_player_vinyl_banner"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/new_releases_text_view"
            style="@style/BannerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/eight_dips_margin"
            android:text="@string/main_page_first_act"/>

        <TextView
            android:id="@+id/top_songs_text_view"
            style="@style/BannerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/eight_dips_margin"
            android:text="@string/main_page_second_act"/>

        <TextView
            android:id="@+id/top_albums_text_view"
            style="@style/BannerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/eight_dips_margin"
            android:text="@string/main_page_third_act"/>

        <TextView
            android:id="@+id/recommended_text_view"
            style="@style/BannerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/eight_dips_margin"
            android:text="@string/main_page_fourth_act"/>

        <TextView
            android:id="@+id/playlists_text_view"
            style="@style/BannerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/eight_dips_margin"
            android:text="@string/main_page_fifth_act"/>

    </LinearLayout>

</ScrollView>
