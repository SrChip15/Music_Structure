<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A237E"
    tools:context="com.example.android.musicstructureapp.AlbumScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_marginLeft="@dimen/left_margin"
            android:text="@string/album_screen_desc"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_marginLeft="@dimen/left_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/new_releases_album_screen_art" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_marginLeft="@dimen/left_margin"
            android:text="Song 1"
            android:textAppearance="@style/PlayerText"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_marginLeft="@dimen/left_margin"
            android:text="Song 2"
            android:textAppearance="@style/PlayerText"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom"
            android:layout_marginLeft="@dimen/left_margin"
            android:text="Song 3"
            android:textAppearance="@style/PlayerText"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>