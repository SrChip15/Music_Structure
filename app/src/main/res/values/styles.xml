<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BannerText" parent="@android:style/TextAppearance">
        <!-- Font style for the text within the music player -->
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/banner_text_size</item>
    </style>

    <style name="DescText" parent="BannerText">
        <!-- Text size for the descriptive text contained within TextViews -->
        <item name="android:textSize">@dimen/desc_text_size</item>
    </style>

    <style name="ButtonStyling">
        <item name="android:background">@color/buttonColor</item>
    </style>

</resources>
