<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewReleases"
            android:label="New Releases" />
        <activity
            android:name=".TopCharts"
            android:label="Top Charts" />
        <activity
            android:name=".Recommended"
            android:label="Recommended" />
        <activity
            android:name=".Playlists"
            android:label="Playlists" />
        <activity
            android:name=".AlbumScreen"
            android:label="Album" />
        <activity
            android:name=".PlaylistScreen"
            android:label="Playlists" />
    </application>

</manifest>